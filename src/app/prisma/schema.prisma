generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Entry {
  id                  Int      @id @default(autoincrement())
  applicationHostname String
  timestamp           DateTime
  type                String
}

model EntryDetail {
  id          Int     @id @default(autoincrement())
  user        String
  country     String
  ip          String
  device      String
  isDangerous Boolean
  tags        Tag[]
}

model Tag {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  color       String
  entryId     Int
  entryDetail EntryDetail @relation(fields: [entryId], references: [id], onDelete: Cascade)
}
