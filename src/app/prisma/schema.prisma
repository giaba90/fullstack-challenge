generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Entry {
  id                  Int      @id @default(autoincrement())
  applicationHostname String
  timestamp           DateTime
  type                String
  user                String
  country             String
  ip                  String
  device              String
  isDangerous         Boolean
  tags                Tag[]    @relation("EntryTags") // Rimosso onDelete qui
}

model Tag {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  color       String
  entryId     Int
  entry       Entry  @relation("EntryTags", fields: [entryId], references: [id], onDelete: Cascade)
}
